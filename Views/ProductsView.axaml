<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Master_Floor_Project.Views.ProductsView">
    
    <Border Background="#FFFFFF">
        <StackPanel Margin="40" Spacing="20">
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="0" 
                        Content="НАЗАД"
                        FontFamily="Segoe UI"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Background="#F4E8D3"
                        Foreground="#333333"
                        BorderThickness="0"
                        Padding="20,10"
                        CornerRadius="4"
                        Click="BackButton_Click"/>
                
                <TextBlock Grid.Column="1" 
                           Text="ПРОДУКЦИЯ"
                           FontFamily="Segoe UI"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#333333"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Grid>
            
            <Border BorderThickness="1" BorderBrush="#DDDDDD" CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/> <RowDefinition Height="*"/>    </Grid.RowDefinitions>
                    
                    <Border Grid.Row="0" Background="#F4E8D3" BorderThickness="0,0,0,1" BorderBrush="#DDDDDD">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="АРТИКУЛ" FontWeight="Bold" Padding="12,8" Foreground="#333333"/>
                            <TextBlock Grid.Column="1" Text="НАИМЕНОВАНИЕ" FontWeight="Bold" Padding="12,8" Foreground="#333333"/>
                            <TextBlock Grid.Column="2" Text="ТИП" FontWeight="Bold" Padding="12,8" Foreground="#333333"/>
                            <TextBlock Grid.Column="3" Text="ЦЕНА" FontWeight="Bold" Padding="12,8" Foreground="#333333"/>
                        </Grid>
                    </Border>
                    
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            
                            <Border BorderThickness="0,0,0,1" Background="#F4E8D3" BorderBrush="#F0F0F0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" Text="PL-001" Padding="12,10" Foreground="#333333"/>
                                    <TextBlock Grid.Column="1" Text='Ламинат "Премиум"' Padding="12,10" Foreground="#333333"/>
                                    <TextBlock Grid.Column="2" Text="Напольные" Padding="12,10" Foreground="#333333"/>
                                    <TextBlock Grid.Column="3" Text="1500 руб." Padding="12,10" Foreground="#333333"/>
                                </Grid>
                            </Border>
                            
                            <Border BorderThickness="0,0,0,1" Background="#F4E8D3" BorderBrush="#F0F0F0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" Text="PL-002" Padding="12,10" Foreground="#333333"/>
                                    <TextBlock Grid.Column="1" Text="Паркетная доска" Padding="12,10" Foreground="#333333"/>
                                    <TextBlock Grid.Column="2" Text="Напольные" Padding="12,10" Foreground="#333333"/>
                                    <TextBlock Grid.Column="3" Text="2800 руб." Padding="12,10" Foreground="#333333"/>
                                </Grid>
                            </Border>
                            
                            <Border BorderThickness="0,0,0,1" Background="#F4E8D3" BorderBrush="#F0F0F0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" Text="PL-003" Padding="12,10" Foreground="#333333"/>
                                    <TextBlock Grid.Column="1" Text="Плинтус МДФ" Padding="12,10" Foreground="#333333"/>
                                    <TextBlock Grid.Column="2" Text="Аксессуары" Padding="12,10" Foreground="#333333"/>
                                    <TextBlock Grid.Column="3" Text="450 руб." Padding="12,10" Foreground="#333333"/>
                                </Grid>
                            </Border>
                            
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </StackPanel>
    </Border>
</UserControl>