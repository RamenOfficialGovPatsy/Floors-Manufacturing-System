<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Master_Floor_Project.Views.PartnersView">
    
    <UserControl.Styles>
        <Style Selector="DataGridColumnHeader">
            <Setter Property="Background" Value="#F4E8D3"/>
        </Style>
        <Style Selector="DataGridRow">
            <Setter Property="Background" Value="#F4E8D3"/>
        </Style>
        <Style Selector="DataGridRow:selected">
            <Setter Property="Background" Value="#A0A0A0"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </UserControl.Styles>

    <Border Background="#FFFFFF" PointerPressed="DeselectDataGrid_OnPointerPressed">
        <Grid RowDefinitions="Auto,*,Auto" Margin="20">
            
            <!-- Верхняя панель с заголовком и кнопкой НАЗАД -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="0" 
                        Content="НАЗАД" 
                        Click="BackButton_Click" 
                        Background="#F4E8D3" 
                        Foreground="#333333"
                        FontFamily="Segoe UI"
                        FontSize="14"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Padding="20,10"
                        CornerRadius="4"/>
                
                <TextBlock Grid.Column="1" 
                           Text="ПАРТНЕРЫ" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="#333333" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"/>
            </Grid>
            
            <!-- Основная таблица -->
            <DataGrid Grid.Row="1"
                      ItemsSource="{Binding Partners}"
                      SelectedItem="{Binding SelectedPartner}"
                      IsVisible="{Binding !IsLoading}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      GridLinesVisibility="Horizontal"
                      CanUserResizeColumns="True"
                      BorderThickness="1"
                      BorderBrush="#DDDDDD"
                      ScrollViewer.VerticalScrollBarVisibility="Auto">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="НАИМЕНОВАНИЕ" Binding="{Binding Name}" Width="2*"/>
                    <DataGridTextColumn Header="ИНН" Binding="{Binding Inn}" Width="1*"/>
                    <DataGridTextColumn Header="ФИО ДИРЕКТОРА" Binding="{Binding DirectorName}" Width="2*"/>
                    <DataGridTextColumn Header="ТЕЛЕФОН" Binding="{Binding Phone}" Width="1.5*"/>
                    <DataGridTextColumn Header="EMAIL" Binding="{Binding Email}" Width="2*"/>
                    <DataGridTextColumn Header="РЕЙТИНГ" Binding="{Binding Rating}" Width="1*"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Индикатор загрузки -->
            <ProgressBar Grid.Row="1"
                        IsIndeterminate="True" 
                        IsVisible="{Binding IsLoading}" 
                        Width="200" 
                        Height="4"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
            
            <!-- Нижняя панель с кнопками действий - ВСЕГДА ВИДНА -->
            <Border Grid.Row="2" 
                    Background="#F8F8F8" 
                    BorderThickness="0,1,0,0" 
                    BorderBrush="#DDDDDD"
                    Padding="20,15"
                    Margin="0,20,0,0">
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Spacing="20">
                    <Button Content="ДОБАВИТЬ ПАРТНЕРА" 
                            Command="{Binding AddPartnerCommand}" 
                            Background="#67BA80" 
                            Foreground="White"
                            FontFamily="Segoe UI"
                            FontSize="14"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Padding="20,10"
                            CornerRadius="4"/>
                    
                    <Button Content="РЕДАКТИРОВАТЬ" 
                            Command="{Binding EditPartnerCommand}" 
                            CommandParameter="{Binding SelectedPartner}" 
                            Background="#F4E8D3" 
                            Foreground="White"
                            FontFamily="Segoe UI"
                            FontSize="14"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Padding="20,10"
                            CornerRadius="4"/>
                    
                    <Button Content="УДАЛИТЬ" 
                            Command="{Binding DeletePartnerCommand}" 
                            CommandParameter="{Binding SelectedPartner}" 
                            Background="#F4E8D3" 
                            Foreground="White"
                            FontFamily="Segoe UI"
                            FontSize="14"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Padding="20,10"
                            CornerRadius="4"/>
                </StackPanel>
            </Border>
            
        </Grid>
    </Border>
</UserControl>