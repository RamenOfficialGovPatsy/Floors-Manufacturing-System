<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Master_Floor_Project.Views.PartnersView">
    
    <UserControl.Styles>
        <Style Selector="DataGridColumnHeader">
            <Setter Property="Background" Value="#F4E8D3"/>
        </Style>
        <Style Selector="DataGridRow">
            <Setter Property="Background" Value="#F4E8D3"/>
        </Style>
        <Style Selector="DataGridRow:selected">
            <Setter Property="Background" Value="#A0A0A0"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </UserControl.Styles>

    <Border Background="#FFFFFF" PointerPressed="DeselectDataGrid_OnPointerPressed">
        <StackPanel Margin="40" Spacing="20">
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="0" 
                        Content="НАЗАД"
                        FontFamily="Segoe UI"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Background="#F4E8D3"
                        Foreground="#333333"
                        BorderThickness="0"
                        Padding="20,10"
                        CornerRadius="4"
                        Click="BackButton_Click"/>
                
                <TextBlock Grid.Column="0" Grid.ColumnSpan="2"
                           Text="ПАРТНЕРЫ"
                           FontFamily="Segoe UI"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#333333"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Grid>
            
            <DataGrid ItemsSource="{Binding Partners}"
                      SelectedItem="{Binding SelectedPartner}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      GridLinesVisibility="Horizontal"
                      CanUserResizeColumns="True"
                      BorderThickness="1"
                      BorderBrush="#DDDDDD">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="НАИМЕНОВАНИЕ" Binding="{Binding Name}" Width="2*"/>
                    <DataGridTextColumn Header="ИНН" Binding="{Binding Inn}" Width="1*"/>
                    <DataGridTextColumn Header="ФИО ДИРЕКТОРА" Binding="{Binding DirectorName}" Width="2*"/>
                    <DataGridTextColumn Header="ТЕЛЕФОН" Binding="{Binding Phone}" Width="1.5*"/>
                    <DataGridTextColumn Header="EMAIL" Binding="{Binding Email}" Width="2*"/>
                </DataGrid.Columns>
            </DataGrid>
            
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Spacing="20">
                <Button Content="ДОБАВИТЬ ПАРТНЕРА"
                        Command="{Binding AddPartnerCommand}"
                        FontFamily="Segoe UI"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Background="#67BA80"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="30,12"
                        CornerRadius="4"
                        MinWidth="180"/>
                
                <Button Content="РЕДАКТИРОВАТЬ"
                        Command="{Binding EditPartnerCommand}"
                        FontFamily="Segoe UI"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Background="#F4E8D3"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="30,12"
                        CornerRadius="4"
                        MinWidth="180"/>
                
                <Button Content="УДАЛИТЬ"
                        Command="{Binding DeletePartnerCommand}"
                        FontFamily="Segoe UI"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Background="#F4E8D3"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="30,12"
                        CornerRadius="4"
                        MinWidth="180"/>
            </StackPanel>
            
        </StackPanel>
    </Border>
</UserControl>