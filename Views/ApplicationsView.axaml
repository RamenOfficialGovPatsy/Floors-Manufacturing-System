<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Master_Floor_Project.Views.ApplicationsView"
             Width="1000" Height="700">
    
    <Border Classes="main-bg">
        <StackPanel Margin="40" Spacing="25">
            
            <!-- Заголовок и кнопка НАЗАД -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Кнопка НАЗАД -->
                <Button Grid.Column="0" 
                        Content="НАЗАД"
                        FontFamily="Segoe UI"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Background="#F4E8D3"
                        Foreground="#333333"
                        BorderThickness="0"
                        Padding="20,10"
                        CornerRadius="4"
                        Click="BackButton_Click"/>
                
                <!-- Заголовок по центру -->
                <TextBlock Grid.Column="1" 
                           Text="ЗАЯВКИ"
                           FontFamily="Segoe UI"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#333333"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Grid>
            
            <!-- Таблица заявок -->
            <Border BorderThickness="1" BorderBrush="#DDDDDD" CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/> <!-- Заголовки -->
                        <RowDefinition Height="*"/>    <!-- Данные -->
                    </Grid.RowDefinitions>
                    
                    <!-- Заголовки таблицы -->
                    <Border Grid.Row="0" Background="#F4E8D3" BorderThickness="0,0,0,1" BorderBrush="#DDDDDD">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="1.5*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="НОМЕР ЗАЯВКИ" FontWeight="Bold" Padding="12,10"/>
                            <TextBlock Grid.Column="1" Text="ПАРТНЕР" FontWeight="Bold" Padding="12,10"/>
                            <TextBlock Grid.Column="2" Text="ДАТА" FontWeight="Bold" Padding="12,10"/>
                            <TextBlock Grid.Column="3" Text="СТАТУС" FontWeight="Bold" Padding="12,10"/>
                        </Grid>
                    </Border>
                    
                    <!-- Данные таблицы (заглушки) -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            
                            <!-- Строка 1 -->
                            <Border BorderThickness="0,0,0,1" Background="#F4E8D3" BorderBrush="#F0F0F0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition Width="1.5*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" Text="Z-2024-001" Padding="12,10"/>
                                    <TextBlock Grid.Column="1" Text='ООО "Вектор"' Padding="12,10"/>
                                    <TextBlock Grid.Column="2" Text="2024-01-15" Padding="12,10"/>
                                    <TextBlock Grid.Column="3" Text="В обработке" Padding="12,10"/>
                                </Grid>
                            </Border>
                            
                            <!-- Строка 2 -->
                            <Border BorderThickness="0,0,0,1" Background="#F4E8D3" BorderBrush="#F0F0F0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition Width="1.5*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" Text="Z-2024-002" Padding="12,10"/>
                                    <TextBlock Grid.Column="1" Text='ООО "Стройка"' Padding="12,10"/>
                                    <TextBlock Grid.Column="2" Text="2024-01-16" Padding="12,10"/>
                                    <TextBlock Grid.Column="3" Text="Выполнена" Padding="12,10"/>
                                </Grid>
                            </Border>
                            
                            <!-- Строка 3 -->
                            <Border BorderThickness="0,0,0,1" Background="#F4E8D3" BorderBrush="#F0F0F0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition Width="1.5*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" Text="Z-2024-003" Padding="12,10"/>
                                    <TextBlock Grid.Column="1" Text="ИП Сидоров" Padding="12,10"/>
                                    <TextBlock Grid.Column="2" Text="2024-01-17" Padding="12,10"/>
                                    <TextBlock Grid.Column="3" Text="Новая" Padding="12,10"/>
                                </Grid>
                            </Border>
                            
                        </StackPanel>
                    </ScrollViewer>
                    
                </Grid>
            </Border>
            
            <!-- Кнопки управления -->
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Spacing="20">
                <Button Content="СОЗДАТЬ ЗАЯВКУ"
                        Click="CreateApplicationButton_Click"
                        FontFamily="Segoe UI"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Background="#67BA80"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="25,12"
                        CornerRadius="4"
                        MinWidth="160"/>
                
                <Button Content="ПРОСМОТРЕТЬ"
                        FontFamily="Segoe UI"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Background="#F4E8D3"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="25,12"
                        CornerRadius="4"
                        MinWidth="160"/>
                
                <Button Content="РЕДАКТИРОВАТЬ"
                        FontFamily="Segoe UI"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Background="#F4E8D3"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="25,12"
                        CornerRadius="4"
                        MinWidth="160"/>
            </StackPanel>
            
        </StackPanel>
    </Border>
    
</UserControl>