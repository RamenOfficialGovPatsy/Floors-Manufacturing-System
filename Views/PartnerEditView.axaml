<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             x:Class="Master_Floor_Project.Views.PartnerEditView"
             Width="600" Height="700">

    <UserControl.Styles>
        <Style Selector="TextBox, ComboBox">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#C0C0C0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="20,0,0,0"/>
        </Style>
    </UserControl.Styles>
    
    <Border Classes="main-bg" Background="#FFFFFF">
        <StackPanel Margin="40" Spacing="20">
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="0" 
                        Content="НАЗАД"
                        FontFamily="Segoe UI"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Background="#F4E8D3"
                        Foreground="#333333"
                        BorderThickness="0"
                        Padding="20,10"
                        CornerRadius="4"
                        Click="BackButton_Click"/>
                
                <TextBlock Grid.Column="1"
                           Text="ДОБАВЛЕНИЕ ПАРТНЕРА"
                           FontFamily="Segoe UI"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#333333"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Grid>
            
            <StackPanel Spacing="15" Margin="0,20,0,0">
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" 
                               Text="НАИМЕНОВАНИЕ КОМПАНИИ" 
                               FontFamily="Segoe UI"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#333333"
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1"
                             FontFamily="Segoe UI"
                             FontSize="14"
                             Padding="12,10"
                             CornerRadius="4"
                             Height="40"
                             VerticalContentAlignment="Center"/>
                </Grid>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" 
                               Text="ЮРИДИЧЕСКИЙ АДРЕС" 
                               FontFamily="Segoe UI"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#333333"
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1"
                             FontFamily="Segoe UI"
                             FontSize="14"
                             Padding="12,10"
                             CornerRadius="4"
                             Height="40"
                             VerticalContentAlignment="Center"/>
                </Grid>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" 
                               Text="ИНН" 
                               FontFamily="Segoe UI"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#333333"
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1"
                             FontFamily="Segoe UI"
                             FontSize="14"
                             Padding="12,10"
                             CornerRadius="4"
                             Height="40"
                             VerticalContentAlignment="Center"/>
                </Grid>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" 
                               Text="ФИО ДИРЕКТОРА" 
                               FontFamily="Segoe UI"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#333333"
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1"
                             FontFamily="Segoe UI"
                             FontSize="14"
                             Padding="12,10"
                             CornerRadius="4"
                             Height="40"
                             VerticalContentAlignment="Center"/>
                </Grid>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" 
                               Text="ТЕЛЕФОН" 
                               FontFamily="Segoe UI"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#333333"
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1"
                             FontFamily="Segoe UI"
                             FontSize="14"
                             Padding="12,10"
                             CornerRadius="4"
                             Height="40"
                             VerticalContentAlignment="Center"/>
                </Grid>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" 
                               Text="EMAIL" 
                               FontFamily="Segoe UI"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#333333"
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1"
                             FontFamily="Segoe UI"
                             FontSize="14"
                             Padding="12,10"
                             CornerRadius="4"
                             Height="40"
                             VerticalContentAlignment="Center"/>
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" 
                               Text="РЕЙТИНГ" 
                               FontFamily="Segoe UI"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#333333"
                               VerticalAlignment="Center"/>
                    
                    <ComboBox Grid.Column="1"
                              FontFamily="Segoe UI Emoji, Noto Color Emoji, Segoe UI"
                              FontSize="14"
                              Padding="12,10"
                              CornerRadius="4"
                              Height="40"
                              VerticalContentAlignment="Center"
                              PlaceholderText="Выберите рейтинг">
                        <ComboBox.Items>
                            <sys:String>⭐</sys:String>
                            <sys:String>⭐⭐</sys:String>
                            <sys:String>⭐⭐⭐</sys:String>
                            <sys:String>⭐⭐⭐⭐</sys:String>
                            <sys:String>⭐⭐⭐⭐⭐</sys:String>
                        </ComboBox.Items>
                    </ComboBox>
                </Grid>
                
            </StackPanel>
            
            <StackPanel HorizontalAlignment="Center" 
                        Orientation="Horizontal" 
                        Spacing="20"
                        Margin="0,30,0,0">
                <Button Content="СОХРАНИТЬ"
                        FontFamily="Segoe UI"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Background="#67BA80"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="40,15"
                        CornerRadius="4"
                        MinWidth="150"/>
                
                <Button Content="ОТМЕНА"
                        FontFamily="Segoe UI"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Background="#F4E8D3"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="40,15"
                        CornerRadius="4"
                        MinWidth="150"
                        Click="CancelButton_Click"/>
            </StackPanel>
            
        </StackPanel>
    </Border>
</UserControl>