<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             x:Class="Master_Floor_Project.Views.PartnerEditView"
             Width="600" Height="700">

    <UserControl.Styles>
        <Style Selector="TextBox, ComboBox">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#C0C0C0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="20,0,0,0"/>
        </Style>
        
        <Style Selector="TextBox:error">
            <Setter Property="BorderBrush" Value="Red"/>
        </Style>
    </UserControl.Styles>
    
    <Border Classes="main-bg" Background="#FFFFFF">
        <StackPanel Margin="40" Spacing="20">
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="0" 
                        Content="НАЗАД"
                        FontFamily="Segoe UI"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Background="#F4E8D3"
                        Foreground="#333333"
                        BorderThickness="0"
                        Padding="20,10"
                        CornerRadius="4"
                        Click="BackButton_Click"/>
                
                <TextBlock Grid.Column="0" Grid.ColumnSpan="2"
                           Text="ДОБАВЛЕНИЕ ПАРТНЕРА"
                           FontFamily="Segoe UI"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#333333"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Grid>
            
            <StackPanel Spacing="15" Margin="0,20,0,0">
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="НАИМЕНОВАНИЕ КОМПАНИИ" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" Text="{Binding Name, Mode=TwoWay}"/>
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="ЮРИДИЧЕСКИЙ АДРЕС" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" Text="{Binding Address, Mode=TwoWay}"/>
                </Grid>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="ИНН" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" Text="{Binding Inn, Mode=TwoWay}"/>
                </Grid>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="ФИО ДИРЕКТОРА" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" Text="{Binding DirectorName, Mode=TwoWay}"/>
                </Grid>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="ТЕЛЕФОН" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" Text="{Binding Phone, Mode=TwoWay}"/>
                </Grid>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="EMAIL" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" Text="{Binding Email, Mode=TwoWay}"/>
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="РЕЙТИНГ" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    
                    <ComboBox Grid.Column="1" SelectedItem="{Binding Rating, Mode=TwoWay}" 
                    PlaceholderText="Выберите рейтинг"
                    FontFamily="Segoe UI Emoji, Noto Color Emoji, Segoe UI">
                        <ComboBox.Items>
                            <sys:String>⭐</sys:String>
                            <sys:String>⭐⭐</sys:String>
                            <sys:String>⭐⭐⭐</sys:String>
                            <sys:String>⭐⭐⭐⭐</sys:String>
                            <sys:String>⭐⭐⭐⭐⭐</sys:String>
                        </ComboBox.Items>
                    </ComboBox>
                </Grid>
            </StackPanel>
            
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Spacing="20" Margin="0,30,0,0">
                <Button Content="СОХРАНИТЬ" Command="{Binding SaveCommand}" Background="#67BA80" Foreground="White"/>
                <Button Content="ОТМЕНА" Click="CancelButton_Click" Background="#F4E8D3" Foreground="#333333"/>
            </StackPanel>
            
        </StackPanel>
    </Border>
</UserControl>